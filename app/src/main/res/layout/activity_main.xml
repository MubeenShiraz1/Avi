<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.x1unix.avi.DashboardActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/movies_results_screen"
        android:visibility="gone"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/movies_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            />
    </LinearLayout>
    <!-- start hint -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="54dp"
        android:orientation="vertical"
        android:id="@+id/wellcome_screen"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="128dp"
            app:srcCompat="@drawable/ic_search"
            android:layout_marginBottom="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avi_wellcome"
            android:textStyle="bold|italic"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="15dp"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avi_start_hint"
            android:textStyle="normal|italic"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <!-- No internet message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="54dp"
        android:orientation="vertical"
        android:id="@+id/no_internet_screen"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="128dp"
            app:srcCompat="@drawable/ic_signal_wifi"
            android:layout_marginBottom="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avi_no_internet"
            android:textStyle="bold|italic"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avi_connect_please"
            android:textStyle="normal|italic"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:text="@string/avi_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connection_refresh_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_gravity="center"
            android:layout_marginTop="28sp" />
    </LinearLayout>

    <!-- Error message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="54dp"
        android:orientation="vertical"
        android:id="@+id/error_message_screen"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="128dp"
            app:srcCompat="@drawable/ic_mood_bad"
            android:layout_marginBottom="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avi_oops"
            android:textStyle="bold|italic"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="15dp"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avi_error_occured"
            android:textStyle="normal|italic"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="true" />


</RelativeLayout>

